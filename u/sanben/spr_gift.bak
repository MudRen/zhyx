//春节超级大礼包


#include <ansi.h>
inherit ITEM;


void create()
{
        set_name(NOR + HIR "春节超级大礼包" NOR, ({ "giftpack" }));
        if (clonep())
                set_default_object(__FILE__);
        else {
                set("unit", "个");
                set("long", "这是中华英雄巫师组发放的春节礼包，"
                            "你可以打开它(open giftpack)。\n");                
                set("no_put", "这样东西不能离开你。\n");
                set("no_sell", "这样东西不能离开你。\n");
        }
        setup();
}

void init()
{
     add_action("do_open","open");    
}

int do_open( string arg )
{
   string ob;
   object gift; 

    if ( !arg || arg != "giftpack")
    return notify_fail("你要打开什么？\n");

    gift = new("/u/sanben/obj/roll");
    gift->move(this_player());
    tell_object(this_player(), HIY"恭喜你获得了礼物"NOR + 
                               gift->name() + "。\n"NOR);   

    gift = new("/u/sanben/obj/fig");
    gift->move(this_player());
    tell_object(this_player(), HIY"恭喜你获得了礼物"NOR + 
                               gift->name() + "。\n"NOR);   

    gift = new("/u/sanben/obj/jiaozi");
    gift->move(this_player());
    tell_object(this_player(), HIY"恭喜你获得了礼物"NOR + 
                               gift->name() + "。\n"NOR);   


    gift = new("/clone/money/cash");
    gift->set_amount(10);

    gift->move(this_player());
    tell_object(this_player(), HIY"恭喜你获得了礼物"NOR + 
                               gift->name() + "。\n"NOR);   
    

    destruct(this_object());   
    return 1;
// /clone/fam/gift/int3.c
}

